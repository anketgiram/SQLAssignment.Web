@using Assignmnet.EntityLayer.Models
@model Material

<h2>Delete Material</h2>

<form asp-controller="MaterialController1" asp-action="DeleteMaterial" method="post">
    <div class="row mb-3">

        <div class="col-md-6">
            <label asp-for="Code" class="control-label"></label>
            <input asp-for="Code" class="form-control" readonly/>
            <span asp-validation-for="Code" class="text-danger"></span>
        </div>


        <div class="col-md-6 text-end align-self-end">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-controller="MaterialController1" asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </div>


    <div class="row mb-3">
        <div class="col-12">
            <label asp-for="ShortText" class="control-label"></label>
            <input asp-for="ShortText" class="form-control" readonly />
            <span asp-validation-for="ShortText" class="text-danger"></span>
        </div>
    </div>


    <div class="row mb-3">
        <div class="col-12">
            <label asp-for="LongTexts" class="control-label"></label>
            <input asp-for="LongTexts" class="form-control" readonly />
            <span asp-validation-for="LongTexts" class="text-danger"></span>
        </div>
    </div>


    <div class="row mb-3">
        <div class="col-6">
            <label asp-for="ReorderLevel" class="control-label"></label>
            <input asp-for="ReorderLevel" class="form-control" readonly />
            <span asp-validation-for="ReorderLevel" class="text-danger"></span>
        </div>

        <div class="col-md-6 align-self-center">
            <div class="form-check">
                <label asp-for="MinOrderQuantity" class="control-label"></label>
                <input asp-for="MinOrderQuantity" class="form-control" readonly />
                <span asp-validation-for="MinOrderQuantity" class="text-danger"></span>
            </div>
        </div>
    </div>


    <div class="row mb-3">
        <div class="col-6">
            <label asp-for="Unit" class="control-label"></label>
            <input asp-for="Unit" class="form-control" readonly />
            <span asp-validation-for="Unit" class="text-danger"></span>
        </div>

        <div class="col-md-6 align-self-center">
            <div class="form-check">
                <input asp-for="IsActive" class="form-check-input" type="checkbox" disabled />
                <label asp-for="IsActive" class="form-check-label"></label>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
